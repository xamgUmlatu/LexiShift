{
  "manifest_version": 3,
  "name": "__MSG_app_name__",
  "version": "0.1.0",
  "description": "__MSG_app_description__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/language_prefs.js",
        "shared/settings_defaults.js",
        "shared/lemmatizer.js",
        "shared/helper_transport_extension.js",
        "shared/helper_client.js",
        "shared/srs_selector.js",
        "shared/srs_store.js",
        "shared/srs_feedback.js",
        "shared/srs_gate.js",
        "shared/srs_metrics.js",
        "content/tokenizer.js",
        "content/matcher.js",
        "content/replacements.js",
        "content/ui.js",
        "content/utils.js",
        "content_script.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["shared/srs_selector_test_dataset.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
